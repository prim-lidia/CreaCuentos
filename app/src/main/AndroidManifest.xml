<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.ieselcaminas.pmdm.creacuento">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MyTalesActivity" />
        <activity android:name=".ViewTalesActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".TaleDetailActivity" />
        <activity android:name=".EditTaleActivity"></activity>

        <service android:name=".UploadImageIntentService" />
    </application>

</manifest>